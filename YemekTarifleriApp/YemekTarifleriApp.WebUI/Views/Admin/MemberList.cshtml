@model List<YemekTarifleriApp.Entity.Member>

<div class="row" style="height:560px">
    <div class="col-md-9">
        <h5 class="display-4 text-light">Admin Yazar İşlemleri</h5>
        <hr />
        <a href="/admin/membercreate/create" class="btn btn-sm btn-success mb-1">Yeni Yazar Ekle</a>

        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Yazar Kullanıcı Adı</th>
                    <th>Yapılacak İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
    @foreach (var category in Model)
    {
<tr>
    <td>@category.MemberId</td>
    <td>@category.MemberUserName</td>
    <td>
        <a href="/admin/memberedit/@category.MemberId" class="btn btn-sm btn-primary mr-1">Yazar Düzenle</a>
        <form action="/admin/MemberDelete" method="post" class="d-inline">
            <input type="hidden" name="CategoryId" value="@category.MemberId" />
            <button type="submit" class="btn btn-sm btn-danger">Yazar Sil</button>
        </form>
    </td>
</tr>}}
                else
                {

                }
            </tbody>
        </table>
    </div>
</div>