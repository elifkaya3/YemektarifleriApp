@model List<YemekTarifleriApp.Entity.Category>

<div class="row">
    <div class="col-md-9">
        <h5 class="display-4 text-light">Admin Kategori İşlemleri</h5>
        <hr />
        <a href="/admin/categorycreate/create" class="btn btn-sm btn-success mb-1">Yeni Kategori Ekle</a>

        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kategori Türü</th>
                    <th>Yapılacak İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.CategoryId</td>
                            <td>@category.CategoryName</td>
                            <td>
                                <a href="/admin/categoryedit/@category.CategoryId" class="btn btn-sm btn-primary mr-1">Kategori Düzenle</a>
                                <form action="/admin/CategoryDelete" method="post" class="d-inline">
                                    <input type="hidden" name="CategoryId" value="@category.CategoryId" />
                                    <button type="submit" class="btn btn-sm btn-danger">Kategori Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                 
                }
            </tbody>
        </table>
    </div>
</div>