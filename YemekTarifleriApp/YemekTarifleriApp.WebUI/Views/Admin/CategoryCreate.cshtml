@model YemekTarifleriApp.WebUI.Models.CategoryModel

<h5 class="display-3 text-light">Yeni Kategori Yarat</h5>
<hr />
<form asp-controller="Admin" asp-action="CategoryCreate" method="post">
    <div class="row" style="height:440px">
        <div class="col-md-8">

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Kategori ismi:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-success">Kategori Kaydet</button>
                </div>
            </div>
        </div>
       
    </div>
</form>