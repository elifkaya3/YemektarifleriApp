@model List<YemekTarifleriApp.Entity.Category> 

<div class="list-group ">
    <a asp-controller="Recipe" asp-action="List" asp-route-category="" class="list-group-item list-group-item-action list-group-item-warning">Tümünü Göster</a>
    @foreach (var item in Model)
    {
<a asp-controller="Recipe"
   asp-action="List"
   asp-route-category="@item.Url"
   class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==item.Url ? "active" :"")">@item.CategoryName</a>
    }
</div>